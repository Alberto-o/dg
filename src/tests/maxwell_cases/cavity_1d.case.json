{
    "solver": {
        "type": "maxwell",
        "spatial_discretization": {
            "tesselations": [
                {
                    "dimension": 1,
                    "type": "dg",
                    "fields": [
                        "E",
                        "H"
                    ],
                    "flux_type": "upwind",
                    "basis": {
                        "type": "nodal_lgl",
                        "order": 1
                    },
                    "grid": [
                        {
                            "elem_id": 0,
                            "steps": 0.025,
                            "bounds": ["pec", "pec"]
                        }
                    ]
                }
            ]
        },
        "time_integrator": {
            "type": "lserk4",
            "final_time": 20e-9,
            "cfl": 1.0
        }
    },

    "geometry": {
        "coordinates": [
            0.0,
            1.0,
            0.5
        ],

        "lines": [
            [0, 1],
            [2, 2],
            [1, 2]
        ]
    },

    "electromagnetics": {
        "sources": [
            {
                "type": "initialCond",
                "magnitude": {
                    "type": "gaussian",
                    "gaussian_spread": 0.05,
                    "gaussian_amplitude": 0.5,
                    "peak_position": 1
                }
            }
        ],

        "probes": [
            {
                "name": "e_all",
                "type": "electricField",
                "elem_id": 0
            }
        ]
    }
}